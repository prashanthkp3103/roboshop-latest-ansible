[Unit]
Description = User Service
[Service]
User=roboshop
Environment=MONGO=true
#Environment=REDIS_URL='redis://redis.{{ env }}.meppk.xyz:6379'
Environment=REDIS_URL='redis://redis.{{ env }}.meppk.xyz:6379'
